<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".face.operations.ImageCaptureActivity"
    android:orientation="vertical">


    <com.android.noam.sellfyattendance.AutoFitTextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/croppedFaceView"
        />

    <ImageView
        android:id="@+id/croppedFaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:minHeight="100dp"
        android:minWidth="100dp"/>

    <Button
        android:id="@+id/btn_take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/croppedFaceView"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:textSize="26sp"
        android:text="@string/take_picture" />


</RelativeLayout>